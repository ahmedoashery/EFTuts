                <MenuItem Header="Save">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="ContentSave" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Save As.." />
                <MenuItem Header="Exit"
                          InputGestureText="Ctrl+E">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="ExitToApp" />
                    </MenuItem.Icon>
                </MenuItem>
                <Separator />
                <MenuItem Header="Excellent"
                          IsCheckable="True"
                          IsChecked="True" />
                <MenuItem
                  Header="Rubbish"
                  IsCheckable="True" />
                <MenuItem Header="Dig Deeper"
                          InputGestureText="Ctrl+D">
                    <MenuItem Header="Enlightenment?"
                              IsCheckable="True" />
                    <MenuItem Header="Disappointment"
                              IsCheckable="True" />
                </MenuItem>
                <MenuItem Header="Look Deeper"
                          InputGestureText="Ctrl+D">
                    <MenuItem Header="Plain" />
                    <MenuItem Header="Ice Cream" />
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Edit" Template="{StaticResource MenuItemTemplate}">
